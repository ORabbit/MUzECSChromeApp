{
  "name": "MUBlocklyDuino App",
  "version": "0.1",
  "manifest_version": 2,
  "description": "A chrome extenstion to upload compiled sketches to an arduino Leonardo",
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },
  "permissions": [
    "extension",
    "serial",
    "usb",
    "http://*/"
  ],
  "web_accessible_resources": [
    "blink-example.hex"
  ],

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],

	"externally_connectable": {
		"matches": ["<all_urls>"]
	},

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
